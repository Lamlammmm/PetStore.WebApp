@model AboutModel

<div>
    <h4>Sửa dữ liệu</h4>
    <hr />
    <form asp-controller="About" asp-action="Edit" enctype="multipart/form-data" method="post">
        <div class="form-body">
            <input type="hidden" asp-for="Id" />

            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" min="0" />
                </div>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" min="0" />
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn btn-success btn-sm">
                    Lưu
                </button>
            </div>
        </div>
    </form>
</div>