@model BannerModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

<div>
    <h4>Chi tiết</h4>
    <hr />
    <form asp-controller="Banner" asp-action="Detail" enctype="multipart/form-data" method="post">
        <div class="form-body">
            <input type="hidden" asp-for="Id" />
            @foreach (var item in Model.FilesModels)
            {
                <a><img width="100" height="100" src="@(Configuration["BaseAddress"]+item.Path+ "/"+@item.FileName+"")" alt="@item.FileName" /></a>
            }
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" readonly="@(true)" />
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" readonly="@(true)" />
                </div>
                <div class="form-group">
                    <label asp-for="TypeBanner" class="control-label"></label>
                    @Html.DropDownListFor(m => m.TypeBanner, Model.AvailableTypeBanner, "Loại quảng cáo", new { @class = "form-control" ,disabled = "disabled" })
                </div>
            </div>
        </div>
    </form>
</div>