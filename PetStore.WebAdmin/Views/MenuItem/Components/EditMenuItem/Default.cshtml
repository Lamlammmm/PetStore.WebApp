@model MenuItemModel

<div>
    <h4>Sửa dữ liệu</h4>
    <hr />
    <form asp-controller="About" asp-action="Edit" method="post">
        <div class="form-body">
            <input type="hidden" asp-for="Id" />

            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="menuName" class="control-label"></label>
                    <input asp-for="menuName" class="form-control" />
                </div>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="ghortOrder" class="control-label"></label>
                    <input asp-for="ghortOrder" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="icon" class="control-label"></label>
                <input asp-for="icon" class="form-control" />
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn btn-success btn-sm">
                    Lưu
                </button>
            </div>
        </div>
    </form>
</div>