@model IEnumerable<BannerModel>
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

@foreach (var item in Model)
{
    <div class="container-fluid bg-offer my-5 py-5">
        <div class="container py-5">
            <div class="row gx-5 justify-content-start">
                <div class="col-lg-7">
                    <div class="border-start border-5 border-dark ps-5 mb-5">
                        <h6 class="text-dark text-uppercase">Special Offer</h6>
                        <h1 class="display-5 text-uppercase text-white mb-0">@item.Title</h1>
                    </div>
                    <p class="text-white mb-4">@item.Content</p>
                    <a href="" class="btn btn-light py-md-3 px-md-5 me-3">Shop Now</a>
                    <a href="" class="btn btn-outline-light py-md-3 px-md-5">Read More</a>
                </div>
            </div>
        </div>
    </div>

    <style>

        .bg-offer {
            background: url(@(Configuration["BaseAddress"] + "/api/FileBanner/image/" + @item.Image)) top right no-repeat;
            background-size: cover;
        }

    </style>
}